<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleApp.MainPage">
    <VerticalStackLayout>
        <CollectionView ItemsSource="{Binding Posts}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedPost}"
                        SelectionChanged="OnSelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10" RowDefinitions="Auto,Auto">
                        <Image Grid.Row="0" Source="{Binding ImageUrl}" HeightRequest="200" Aspect="AspectFill"/>
                        <Label Grid.Row="1" Text="{Binding Content}" FontSize="Medium"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Add Post" Clicked="OnAddClicked"/>
    </VerticalStackLayout>
</ContentPage>
