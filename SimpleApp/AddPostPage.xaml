<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleApp.AddPostPage"
             xmlns:models="clr-namespace:SimpleApp.Models">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <Label Text="Content" FontSize="Medium"/>
            <Editor x:Name="contentEntry" Placeholder="Enter post content" AutoSize="TextChanges" />

            <Label Text="Image URL" FontSize="Medium"/>
            <Entry x:Name="imageUrlEntry" Placeholder="Enter image URL" />

            <Button Text="Save" Clicked="OnSaveClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
