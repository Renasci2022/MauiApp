<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleApp.AddPostPage"
             xmlns:models="clr-namespace:SimpleApp.Models">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <Entry x:Name="titleEntry" Placeholder="Title" />
            <Editor x:Name="contentEditor" Placeholder="Content" HeightRequest="200" />
            <Button Text="Save Post" Clicked="OnSaveClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
